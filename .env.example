# Environment
ENVIRONMENT=development
DEBUG=false

# API
API_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database (optional for local dev — in-memory repos used by default)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=orchestrator
DB_USER=orchestrator
DB_PASSWORD=orchestrator_pass
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis (optional for local dev)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Kafka (optional — disabled by default)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_ENABLED=false
KAFKA_TOPIC_PREFIX=orchestrator

# Auth
AUTH_SECRET_KEY=change-me-in-production
AUTH_ALGORITHM=HS256
AUTH_TOKEN_EXPIRE_MINUTES=30

# Observability
OTLP_ENDPOINT=http://localhost:4317
SERVICE_NAME=deployment-orchestrator
LOG_LEVEL=INFO
METRICS_ENABLED=true
TRACING_ENABLED=true

# Rate Limiting
RATE_LIMIT_RPM=60
RATE_LIMIT_BURST=10
